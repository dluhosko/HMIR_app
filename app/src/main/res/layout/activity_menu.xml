<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    tools:context="com.example.viktordluhos.hmir_demogui.Menu"
    android:weightSum="8">


    <TextView
        android:text="SENSORS TRYOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_weight="1"/>

    <Button
        android:text="Read sensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goTo_readSensors"
        android:onClick="goToReadSensorsActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"/>

    <Button
        android:text="Gyroskop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:layout_centerHorizontal="true"
        android:onClick="goToGyroActivity"
        android:layout_weight="1"/>

    <Button
        android:text="AKCELEROMETER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_centerHorizontal="true"
        android:onClick="goToAccelerometerActivity"
        android:layout_weight="1"/>

    <Button
        android:text="MAGNETOMETER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="goToMagnetActivity"
        android:layout_weight="1"/>

    <Button
        android:text="LIGHTSENSOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        android:layout_below="@+id/button12"
        android:layout_centerHorizontal="true"
        android:onClick="goToLightSensorActivity"
        android:layout_weight="1"/>

    <TextView
        android:text="APPLICATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginTop="35dp"
        android:layout_weight="1"/>


    <Button
        android:text="KAMERA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button13"
        android:layout_centerHorizontal="true"
        android:id="@+id/button14"
        android:onClick="goToCameraActivity"
        android:layout_weight="1"/>





</LinearLayout>
